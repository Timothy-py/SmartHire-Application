<% if(message.length > 0) { %>
	<% if(message[0] === "Duplicate! Rank already exist") { %>
		<div class="alert alert-danger" style="margin:auto"><%= message %></div>
	<% } else { %>
		<div class="alert alert-success" style="margin:auto"><%= message %></div>
	<% } %>
	
<% } %>

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

	<div class="kt-portlet kt-portlet--mobile">
		<div class="kt-portlet__head kt-portlet__head--lg">
			<div class="kt-portlet__head-label">
				<h3 class="kt-portlet__head-title">
					My Skills
				</h3>
			</div>
			<div class="kt-portlet__head-toolbar">
				<div class="kt-portlet__head-wrapper">
					<a href="./skillpool/user" class="btn btn-brand btn-bold btn-upper btn-font-sm">
						<i class="la la-plus"></i>
						Add Skill
					</a>
				</div>
			</div>
		</div>
		
	
		<div class="kt-portlet__body">

			<!--begin: Datatable -->
			
			<table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
				<thead>
					<tr>
						<th>Name</th>
						<th>Rank</th>
						<!--<th></th>-->
					</tr>
				</thead>
				<tbody>
					<% skills.forEach(function(skill) { %>
					<tr>
						<!--<form action="./userskillrank/<%= skill.id %>/update" method="POST">-->
						<form action="./userskillrank/update" method="POST">
						<td>
							<%= skill.skillName %>
							 <input class="skill" type="text" id="<%= skill.skillName %>" name="skillName" value="<%= skill.id %>" hidden><br>
						</td>
						
						<td>
							
							 <input class="skill" type="number" id="<%= skill.id %>" name="user_rank" min="1" max="10" value="<%= skill.user_rank %>"><br>
						</td>
						
						<!--<td nowrap> -->
						<!--	  <button type="submit" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Update Rank">-->
						<!--	    <i class="la la-edit"></i>-->
						<!--	</button>-->
						<!--</form>-->
						<!--</td>-->
					</tr>
					<% }); %>
					<tr>
						<td>
							<button type="submit" class="btn btn-primary">Update</button>
						</td>
					</tr>
					</form>
				</tbody>
			</table>

			<!--end: Datatable -->

			
		</div>
	</div>
</div>


